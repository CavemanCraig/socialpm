<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:t='urn:import:com.ocpsoft.socialpm.gwt.client.local.view.component'>

	<g:HTMLPanel styleName="welcome">
		<div class="container">
			<div class="row" style="margin-top: 5px;">
				<div class="span12 columns">
					<div class="pull-left">
						<t:ProfileLink ui:field="profileImageLink">
							
						</t:ProfileLink>
					</div>
					<div class="pull-left" style="margin-left: 10px;">
						<h4>
							Hi there, <t:ProfileLink ui:field="profileNameLink" title="View your account" />.
						</h4>
						<p>What are you going to accomplish today?</p>
					</div>
					<div class="pull-right">
						<h4 class="pull-right"><t:Span ui:field="greeting" /></h4>
					</div>
				</div>
			</div>
		</div>
	</g:HTMLPanel>

</ui:UiBinder>